{% extends 'plantilla.twig' %}

{% block titulo 'Nuevo post' %}

{% block estilos %}{% endblock %}

{% block contenido %}
	<form action="{{app.request.basepath}}/blog/nuevo_post" method="POST">
		<h1>Alta de post nuevo</h1>
		<label>Titulo del Post: </label><input type="text" name="titulo">
		<br>
		<label>Autor del Post: </label><input type="text" name="autor">
		<br>
		<label for="">Fecha del Post</label><input type="text" name="fecha">
		<br>
		<label for="">Cuerpo: </label><textarea name="cuerpo" id="" cols="30" rows="10"></textarea>
		<br>
		<button> Send! </button>
	</form>
{% endblock %}