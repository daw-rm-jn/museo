{% extends 'inicio.twig' %}

{% block titulo 'Tienda :: Registro' %}
	
	{% block about %}
		<h2>Registrar un nuevo cliente</h2>		
	{% endblock %}

	{% block info %}
		<h2>Información:</h2>
		<p>Rellene el formulario de alta con sus datos.</p>
		<br>
		<p>Los datos personales son <span class="required">obligatorios</span>, los datos bancarios podrá rellenarlos más adelante.</p>
		<br>
		<p id="info"></p>
	{% endblock %}

	{% block contenido %}
		<div class="login">
			<table border="0" width="241">
			<tr>
				<th>Datos personales</th>
			</tr>
			{{ form_start(form, {'method': 'POST'}) }}
			<tr>
				<td class="form">
					{{ form_row(form.email) }}
				</td>
			</tr>
			<tr>
				<td class="form">
					{{ form_row(form.clave) }}
					{{ form_row(form.clavecifrada) }}
				</td>
			</tr>
			<tr>
				<td class="form">{{ form_row(form.nombre) }}</td>
			</tr>
			<tr>
				<td class="form">{{ form_row(form.nif) }}</td>
			</tr>
			<tr>
				<td class="form">{{ form_row(form.direccion) }}</td>
			</tr>
			<tr>
				<td class="form">{{ form_row(form.pais) }}</td>
			</tr>
			<tr>
				<td class="form">{{ form_row(form.provincia) }}</td>
			</tr>
			<tr>
				<td class="form">{{ form_row(form.poblacion) }}</td>
			</tr>
			<tr>
				<td class="form">{{ form_row(form.codigoPostal) }}</td>
			</tr>
			<tr>
				<td class="form">{{ form_row(form.telf) }}</td>
			</tr>
			<tr>
				<th>Datos bancarios</th>
			</tr>
			<tr>
				<td class="form">{{ form_row(form.numeroTarjeta) }}</td>
			</tr>
			<tr>
				<td class="form">{{ form_row(form.CCV) }}</td>
			</tr>
			<tr>
				<td class="form">Fecha de caducidad: 
					<select name="selfechCadAnio" id="selfechCadAnio">
						<option value="">-</option>
						<option value="{{curYear}}">{{curYear}}</option>
						{% for i in curYear..(curYear+10) %}
							<option value="{{curYear+loop.index}}">{{curYear+loop.index}}</option>
						{% endfor %}
					</select>
					/
					<select name="selfechCadMes" id="selfechCadMes">
						<option value="">-</option>
						{% for i in 1..12 %}
							<option value="{{loop.index}}">{{loop.index}}</option>
						{% endfor %}
					</select>
				</td>
			</tr>
			<tr>
				<td class="cent">
					{{ form_row(form.registrar, {'attr': {'onclick':'cifrar()' }}) }}
				</td>
			</tr>		
			{{ form_end(form) }}
			</table>			
		</div>
	{% endblock %}








