{% extends 'inicio.twig' %}

{% block titulo 'Tienda :: Detalle de Pedido' %}
	
	{% block about %}
		<h2>Detalles de pedido</h2>
	{% endblock %}

	{% block info %}
	{% endblock %}

	{% block contenido %}
		<div class="showCarr">
			<table style="width:100%;" class="table-show-carr">
			<tr>
				<th class="th-show-carr">Nombre</th>
				<th class="th-show-carr">Precio</th>
				<th class="th-show-carr">Unidades</th>
				<th class="th-show-carr">IVA</th>
				<th class="th-show-carr">Total</th>
			</tr>
				{% for linea in lineas %}
				{% if linea.idLinea_Pedido is divisibleby(2) %}
				<tr>
					<td class="td-show-carr par">
						<a href="{{app.request.basepath}}/item/{{linea.idCopia_Cuadro}}">{{linea.nombreProducto}}</a>
					</td>
					<td class="td-show-carr par">
						{{linea.precio}}€
					</td>
					<td class="td-show-carr par">
						{{linea.unidades}}
					</td>
					<td class="td-show-carr par">
						{{linea.IVA}}%
					</td>
					<td class="td-show-carr par">
						{{linea.totalLinea}}€
					</td>
				</tr>
				{% else %}
				<tr>
					<td class="td-show-carr impar">
						<a href="{{app.request.basepath}}/item/{{linea.idCopia_Cuadro}}">{{linea.nombreProducto}}</a>
					</td>
					<td class="td-show-carr impar">
						{{linea.precio}}€
					</td>
					<td class="td-show-carr impar">
						{{linea.unidades}}
					</td>
					<td class="td-show-carr impar">
						{{linea.IVA}}%
					</td>
					<td class="td-show-carr impar">
						{{linea.totalLinea}}€
					</td>
				</tr>
				{% endif %}
				{% endfor %}
				<tr>
					<td colspan="3"></td>
					<td class="td-show-carr">
						Estado del Pedido:
					</td>
					<td class="td-show-carr">
						{{estado}}
					</td>
				</tr>
				<tr>
					<td colspan="3"></td>
					<th class="th-show-carr">
						IMPORTE TOTAL:
					</th>
					<th class="th-show-carr">
						{{totalPedido}}€
					</th>
				</tr>
				<tr>
					<td colspan="4"></td>
					<td class="td-get-recibo">
						{{ form_start(form, {'method': 'POST'}) }}
							{{form_row(form.idPedido, {'attr': {'value': idPedido }}) }}
							{{form_row(form.obtenerRecibo)}}
						{{ form_end(form) }}
					</td>
				</tr>
			</table>
		</div>
	{% endblock %}