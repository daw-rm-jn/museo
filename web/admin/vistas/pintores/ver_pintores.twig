{% extends 'inicio.twig' %}

{% block titulo 'Pintores' %}

	{% block action %}
			<table class="tablacrud" id="tablacrud">
				<thead>
					<tr class="trcab">
						<th colspan="3">Lista de Pintores</th>
					</tr>
					<tr class="trtit">
						<th>
							idPintor
						</th>
						<th>
							nombrePintor
						</th>
						<th>#</th>
					</tr>							
				</thead>
					{% for pintor in pintores %}
						<tr>
							<input type="hidden" name="hidid" value="{{pintor.idPintor}}"/>
							<td class="perla">
								<a href="{{app.request.basepath}}/pintores/pintor/{{pintor.idPintor}}">{{pintor.idPintor}}</a>
							</td>
							<td class="grey">
								<a href="{{app.request.basepath}}/pintores/pintor/{{pintor.idPintor}}">{{pintor.nombrePintor}}</a>
							</td>
							<td class="perla">
								<input type="checkbox" name="cb_borrar[]" id="cb_borrar[]" value="{{pintor.idPintor}}"/>
							</td>
						</tr>					
					{% endfor %}
					<tr>
						<td class="grey" colspan="3">
							{{ form_start(form, {'method': 'POST'}) }}
								{{ form_row(form.addRegistro)}}	
								{{ form_row(form.borrar)}}	
							{{ form_end(form) }}						
						</td>
					</tr>
				</table>
	{% endblock %}