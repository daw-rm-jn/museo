{% extends 'inicio.twig' %}

{% block titulo 'Cuadros' %}

	{% block action %}
			<table class="tablacrud">
				<thead>
					<tr class="trcab">
						<th colspan="3">Lista de Cuadros</th>
					</tr>
					<tr class="trtit">
						<th>
							idCuadro
						</th>
						<th>
							nombreCuadro
						</th>
						<th>#</th>
					</tr>
				</thead>
					{% for cuadro in pager %}
						<input type="hidden" name="hidid" value="{{cuadro.idCuadro}}"/>
						<tr>
							<td class="perla">
								<a href="{{app.request.basepath}}/cuadros/cuadro/{{cuadro.idCuadro}}">{{cuadro.idCuadro}}</a>
							</td>
							<td class="grey">
								<a href="{{app.request.basepath}}/cuadros/cuadro/{{cuadro.idCuadro}}">{{cuadro.nombreCuadro}}</a>
							</td>
							<td class="perla">
								<input type="checkbox" name="cb_borrar[]" id="cb_borrar[]" value="{{cuadro.idCuadro}}"/>
							</td>
						</tr>
					{% endfor %}
					<tr>
						<td class="grey" colspan="3">
							{{ form_start(form, {'method': 'POST'}) }}
								{{ form_row(form.addRegistro)}}	
								{{ form_row(form.borrar)}}	
							{{ form_end(form) }}						
						</td>
					</tr>
				</table>

				{{ htmlPagination|raw }}
	{% endblock %}