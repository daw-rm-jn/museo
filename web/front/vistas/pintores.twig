{% extends 'inicio.twig' %}

{% block titulo 'Museo :: Pintores' %}
	
	{% block about %}
		<h2>Aqui se mostraran los pintores.</h2>
                <form method="POST" action="/museo/web/front/pintores/buscar">
							<input type="text" name="pintorFormName" placeholder="Busca un pintor" />
							<input type="submit" name="form_buscar" id="form_buscar" value="Buscar">
						</form>
                
	{% endblock %}

	

	{% block contenido %}
		<div class="login">
			<table>
					<tr>
					</tr>
					{% for pintor in pintores %}
						<tr>
							
								
									
									
										<tr>
                                            <td>
                                                <img src="{{app.request.basepath}}/../img/pintores/{{pintor.nombrePintor}}/{{pintor.fotoPintor}}" width="70" height="100"/>
                                            </td>
											<td>												
												{{pintor.nombrePintor}}												
											</td>
                                                                                        <td>												
												{{pintor.bioPintor}}												
											</td>
										</tr>
									
								
							
						
					{% endfor %}
				</table>		
		</div>
	{% endblock %}